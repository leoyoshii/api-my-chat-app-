// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl"] // because we're using node-alpine as the base image
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id        String @id @default(uuid())
  firstName String
  lastName  String
  email     String @unique
  password  String

  createdAt DateTime  @default(now())
  updatedAt DateTime  @default(now()) @updatedAt
  deletedAt DateTime?

  SendedMessages   Messages[] @relation(name: "sendedMessage")
  ReceivedMessages Messages[] @relation(name: "receivedMessage")
}

model Messages {
  id         String @id @default(uuid())
  content    String @db.Text
  senderId   String
  receiverId String

  status StatusOfMessage

  sender   Users @relation(name: "sendedMessage", fields: [senderId], references: [id])
  receiver Users @relation(name: "receivedMessage", fields: [receiverId], references: [id])
}

enum StatusOfMessage {
  SENDED
  RECEIVED
  READ
}
